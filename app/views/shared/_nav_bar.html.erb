<header class="bg-white" data-controller="slideover" data-action="keydown.esc->modal#close" tabindex="-1">
  <nav class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8" aria-label="Global">
    <div class="flex lg:flex-1">
      <%= link_to root_path, class: "-m-1.5 p-1.5" do %>
        <span class="sr-only">LoadUp Sitting</span>
        <%= image_tag "logo.png", class: "h-8 w-auto", alt: "LoadUp Sitting" %>
      <% end %>
    </div>
    <div class="flex lg:hidden">
      <button data-action="slideover#toggle" type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700">
        <span class="sr-only">Open main menu</span>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>
    <div class="hidden lg:flex lg:gap-x-12">
      <%= link_to "New Booking", new_booking_path, class: "text-sm font-semibold leading-6 text-gray-900" %>
    </div>
    <div class="hidden lg:flex lg:flex-1 lg:justify-end">
      <%= link_to admin_bookings_path, class: "text-sm font-semibold leading-6 text-gray-900" do %>
        Admin <span aria-hidden="true">&rarr;</span>
      <% end %>
    </div>
  </nav>
  <!-- Mobile menu, show/hide based on menu open state. -->
  <div class="hidden" role="dialog" aria-modal="true"
          data-slideover-target="overlay"
          data-transition-enter="transition ease-out duration-200"
          data-transition-enter-from="opacity-0"
          data-transition-enter-to="opacity-100"
          data-transition-leave="transition ease-in duration-150"
          data-transition-leave-from="opacity-100"
          data-transition-leave-to="opacity-0">
    <!-- Background backdrop, show/hide based on slide-over state. -->
    <div class="fixed inset-0 z-10"></div>
    <div class="fixed inset-y-0 right-0 z-10 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10"
            data-slideover-target="menu"
            data-transition-enter="transition ease-out duration-200"
            data-transition-enter-from="opacity-0 -translate-x-full"
            data-transition-enter-to="opacity-100 translate-x-0"
            data-transition-leave="transition ease-in duration-150"
            data-transition-leave-from="opacity-100 translate-x-0"
            data-transition-leave-to="opacity-0 -translate-x-full">
      <div class="flex items-center justify-between">
        <%= link_to root_path, class: "-m-1.5 p-1.5 focus:outline-none" do %>
          <span class="sr-only">LoadUp Sitting</span>
          <%= image_tag "logo.png", class: "h-8 w-auto", alt: "LoadUp Sitting" %>
        <% end %>
        <button data-action="slideover#toggle" type="button" class="-m-2.5 rounded-md p-2.5 text-gray-700">
          <span class="sr-only">Close menu</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="mt-6 flow-root">
        <div class="-my-6 divide-y divide-gray-500/10">
          <div class="space-y-2 py-6">
            <%= link_to "New Booking", new_booking_path, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50" %>
          </div>
          <div class="py-6">
            <%= link_to "Admin", admin_bookings_path, class: "-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
