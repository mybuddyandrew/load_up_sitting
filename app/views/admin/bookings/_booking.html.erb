<div id="<%= dom_id booking %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">First name:</strong>
    <%= booking.first_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Last name:</strong>
    <%= booking.last_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Animal name:</strong>
    <%= booking.animal_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Animal type:</strong>
    <%= booking.animal_type %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Hours requested:</strong>
    <%= booking.hours_requested %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Date of service:</strong>
    <%= booking.date_of_service %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Price:</strong>
    <%= booking.price %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this booking", booking, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this booking', edit_booking_path(booking), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
